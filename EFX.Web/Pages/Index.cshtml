@page
@model EFX.Web.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://use.fontawesome.com/ebdd3e0324.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.33.0/codemirror.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.33.0/codemirror.min.css">
    <link rel="stylesheet" href="~/styles/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.33.0/mode/javascript/javascript.min.js"></script>
    <script src="@Url.Content("~/scripts/main.js")"></script>
    <style>
        body {
            padding: 0px;
            font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
        }
        a {
            color: #00B7FF;
        }
    </style>
</head>
<body>
    <div id="dr1"></div>
    <script type="text/javascript">
        let ReactDOM = window.exprEditor.reactDom;        let React = window.exprEditor.react;        let App = window.exprEditor.app;        let CommentBox = React.createElement(App);        ReactDOM.hydrate(CommentBox, document.getElementById("dr1"));
    </script>
</body>
</html>
